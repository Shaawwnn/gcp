{
  "functions": [
    {
      "source": "cloud-run-functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "yarn --cwd \"cloud-run-functions\" lint",
        "yarn --cwd \"cloud-run-functions\" build"
      ]
    }
  ]
}
