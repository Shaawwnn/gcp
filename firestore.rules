rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to todo_list collection
    // In production, you should add authentication checks
    match /todo_list/{document=**} {
      allow read, write: if true; // ⚠️ This project is only used for demo purposes 
    }
    match /logs/{document=**} {
      allow read, write: if true; // ⚠️ This project is only used for demo purposes
    }
    match /scheduled_executions/{document=**} {
      allow read, write: if true; // ⚠️ This project is only used for demo purposes
    }
    // Pub/Sub message collection
    match /pubsub_messages/{document=**} {
      allow read, write: if true; // ⚠️ This project is only used for demo purposes
    }
  }
}
