rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Demo folder - allows authenticated and unauthenticated users to read/write
    // In production, you'd want to add authentication checks
    match /demo/{fileName} {
      // Allow anyone to read files
      allow read: if true;
      
      // Allow anyone to upload files (max 10MB)
      allow create: if request.resource.size < 10 * 1024 * 1024;
      
      // Allow anyone to delete their uploaded files
      allow delete: if true;
      
      // Allow updates to file metadata
      allow update: if true;
    }
    
    // Picture of the Day folder - single shared picture
    match /picture-of-the-day/{fileName} {
      // Allow anyone to read the picture
      allow read: if true;
      
      // Allow anyone to upload/replace the picture (max 10MB)
      allow create, write: if request.resource.size < 10 * 1024 * 1024;
      
      // Allow anyone to delete
      allow delete: if true;
    }
    
    // For production, use authentication-based rules like this:
    /*
    match /demo/{fileName} {
      // Only authenticated users can read
      allow read: if request.auth != null;
      
      // Only authenticated users can upload (max 10MB)
      allow create: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024;
      
      // Only the user who uploaded can delete
      allow delete: if request.auth != null 
                   && resource.metadata.uploadedBy == request.auth.uid;
      
      // Only the owner can update
      allow update: if request.auth != null 
                   && resource.metadata.uploadedBy == request.auth.uid;
    }
    */
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
