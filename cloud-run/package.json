{
  "name": "cloud-run-learning",
  "version": "1.0.0",
  "description": "A simple TypeScript Express app for learning Google Cloud Run",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "keywords": ["cloud-run", "typescript", "express", "gcp"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2"
  }
}
